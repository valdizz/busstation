<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valdizz.busstation.SheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRouteNameShedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_item_margin"
                android:background="@drawable/main_caption_green"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/tvStationNameShedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/main_item_margin"
                    android:layout_marginRight="@dimen/main_item_margin"
                    android:layout_toEndOf="@+id/tvRouteNumShedule"
                    android:layout_toLeftOf="@+id/switchDaysShedule"
                    android:layout_toRightOf="@+id/tvRouteNumShedule"
                    android:layout_toStartOf="@+id/switchDaysShedule"
                    android:background="@drawable/main_caption_green"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/main_item_text_size"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvRouteNumShedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/main_caption"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text=""
                    android:textSize="@dimen/caption_text_size"
                    android:textStyle="normal|bold" />

                <ToggleButton
                    android:id="@+id/switchDaysShedule"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/toggle_btn"
                    android:checked="false"
                    android:minWidth="48dip"
                    android:onClick="onClickSwitchDays"
                    android:textOff="@string/toggle_btn_off"
                    android:textOn="@string/toggle_btn_on" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <TableLayout
            android:id="@+id/tlShedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </TableLayout>
    </ScrollView>

</LinearLayout>
