<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.valdizz.busstation.SheduleActivity">

    <LinearLayout
        android:id="@+id/llCaptionShedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llRouteStationShedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_item_margin"
                android:layout_marginRight="@dimen/main_item_margin"
                android:layout_toEndOf="@+id/tvRouteNumShedule"
                android:layout_toLeftOf="@+id/switchDaysShedule"
                android:layout_toRightOf="@+id/tvRouteNumShedule"
                android:layout_toStartOf="@+id/switchDaysShedule"
                android:background="@drawable/main_caption_green"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRouteNameShedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/main_item_text_size_small" />

                <TextView
                    android:id="@+id/tvStationNameShedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/main_item_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRouteNumShedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/llRouteStationShedule"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/main_caption"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/caption_text_size" />

            <ToggleButton
                android:id="@+id/switchDaysShedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/llRouteStationShedule"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/toggle_btn"
                android:checked="false"
                android:minWidth="48dip"
                android:onClick="onClickSwitchDays"
                android:textOff="@string/toggle_btn_off"
                android:textOn="@string/toggle_btn_on" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llTransferRoutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_item_margin"
            android:background="@drawable/main_caption_green"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="2dp">

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <TableLayout
            android:id="@+id/tlShedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </TableLayout>
    </ScrollView>

</LinearLayout>
