<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tvRSrouteNum"
        style="@style/MainItemStyle"
        android:background="@drawable/main_item_num"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="6"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minHeight="40dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_item"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvRSroute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/main_item_text_size_small"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tvRSstation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/main_item_text_size"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>